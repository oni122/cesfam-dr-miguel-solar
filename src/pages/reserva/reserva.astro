---
import Calendar from "../../components/Calendar.vue";
import Layout from "../../layouts/Layout.astro";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}

const title = "Reserva de hora";
---

<Layout title={title}>
  <section class="w-full">
    <header class="flex justify-center">
      <div class="my-6 w-[90%] rounded bg-[#200934] py-4 text-center text-white">
        <h1 class="text-2xl font-semibold">Pide tu hora</h1>
        <p class="mt-2 text-sm text-white/80">
          Selecciona el día y horario disponible para agendar tu atención.
        </p>
      </div>
    </header>

    <div class="flex justify-center py-4 text-white">
      <div class="w-[90%] rounded-2xl bg-[#200934] p-4 shadow-xl">
        <Calendar client:load />
      </div>
    </div>
  </section>
</Layout>
